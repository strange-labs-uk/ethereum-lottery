FROM mhart/alpine-node:8
MAINTAINER kaiyadavenport@gmail.com
WORKDIR /app
RUN apk add --update \
    python \
    python-dev \
    py-pip \
    build-base \
  && pip install virtualenv \
  && rm -rf /var/cache/apk/*
COPY ./truffle/package.json /app/package.json
COPY ./truffle/yarn.lock /app/yarn.lock
RUN yarn install
COPY ./truffle /app
ENTRYPOINT ["node_modules/.bin/truffle"]
CMD ["develop"]
EXPOSE 8545